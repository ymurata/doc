# for embulk
export PATH="$HOME/.embulk/bin:$PATH"

# for ant
export ANT_HOME="/usr/local/bin/ant/"
export PATH="$PATH:$ANT_HOME/bin"

# for ruby
export PATH="$HOME/.rbenv/bin:$PATH"
